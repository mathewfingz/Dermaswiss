{% if customer and customer.tags contains 'Dropshipper' %}
  <div class="f-cart__dropshipping">
    <dropshipping-component>
      <div class="f-cart__block-dropshipping flex items-center mb-4">
        <input
          id="f-dropshipping-toggle"
          type="checkbox"
          name="attributes[dropshipping]"
          value="yes"
          {% if cart.attributes.dropshipping == 'yes' %}
            checked="checked"
          {% endif %}
          class="mr-2"
        >
        <label for="f-dropshipping-toggle" class="cursor-pointer">
          {{ 'general.cart.dropshipping_option_label' | t | default: 'Â¿Desea enviar este pedido como Dropshipping?' }}
        </label>
        <div class="f-dropshipping--loading ml-2" style="display: none;">
          <svg
            class="animate-spin h-4 w-4 text-primary"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
    </dropshipping-component>
  </div>
  
  <script src="{{ 'dropshipping-option.js' | asset_url }}" defer="defer"></script>
{% endif %}

