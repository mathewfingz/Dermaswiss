    margin-top: 40px;
  }
  .calendar-filters__grid {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 16px;
    flex-wrap: wrap;
  }
  .calendar-filter {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .calendar-filter__label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(var(--color-foreground), 0.6);
  }
  .calendar-filter__select-wrapper {
    position: relative;
    display: inline-block;
  }
  .calendar-filter__select {
    appearance: none;
    -webkit-appearance: none;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 10px 36px 10px 14px;
    font-size: 14px;
    font-weight: 500;
    min-width: 140px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .calendar-filter__select:hover {
    border-color: var(--color-foreground);
  }
  .calendar-filter__select:focus {
    outline: none;
    border-color: var(--color-foreground);
  }
  .calendar-filter__month-input {
    padding-right: 14px;
  }
  .calendar-filter__arrow {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    color: rgba(var(--color-foreground), 0.5);
  }
  .calendar-filter--clear {
    align-self: flex-end;
  }
  .calendar-filter__clear-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: none;
    border: none;
    padding: 10px 14px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    color: rgba(var(--color-foreground), 0.7);
    transition: all 0.2s ease;
  }
  .calendar-filter__clear-btn:hover {
    color: var(--color-foreground);
  }
  .calendar-filter--clear.hidden {
    display: none;
  }

  /* Calendar List */
  .calendar-list {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .calendar-list__date-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 2px solid #f0f0f0;
  }
  .date-header__day {
    font-size: 3rem;
    font-weight: bold;
    line-height: 1;
    color: var(--color-primary);
  }
  .date-header__right {
    display: flex;
    flex-direction: column;
  }
  .date-header__month {
    font-weight: bold;
    text-transform: uppercase;
    font-size: 1.2rem;
    letter-spacing: 0.1rem;
  }
  .date-header__year {
