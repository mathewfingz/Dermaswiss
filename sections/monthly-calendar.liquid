    color: #666;
  }
  .calendar-month-header {
    margin-top: 60px;
    margin-bottom: 25px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
