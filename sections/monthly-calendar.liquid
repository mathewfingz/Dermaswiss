{%- liquid
  assign current_lang = request.locale.iso_code | downcase | split: '-' | first
  if current_lang != 'es'
    assign current_lang = 'en'
  endif

  assign sorted_blocks = section.blocks | sort: 'settings.event_date'

  assign cities = ""
  assign course_types = ""
  for block in sorted_blocks
    {% comment %} Remove restrictive Liquid filtering to allow dynamic JS filters {% endcomment %}
    
    assign city = block.settings.city | strip
    if city == blank and block.settings.location != blank
      assign city = block.settings.location | split: ',' | last | strip
    endif
    
    if city != blank
      assign city_check = city | append: "|"
      unless cities contains city_check
        assign cities = cities | append: city | append: "|"
      endunless
    endif

    assign event_type = block.settings.event_type | strip
    if event_type != blank
      assign type_check = event_type | append: "|"
      unless course_types contains type_check
        assign course_types = course_types | append: event_type | append: "|"
      endunless
    endif
  endfor
  assign city_array = cities | split: "|" | sort
  assign course_type_array = course_types | split: "|" | sort
-%}

<div class="monthly-calendar-list container section-{{ section.id }}" 
  style="--month-font-size: {{ section.settings.month_font_size }}px; --date-title-spacing: {{ section.settings.date_title_spacing }}px;"
>
  <div class="calendar-header">
    {% if section.settings.heading != blank %}
      <h1 class="h2">
        {{ section.settings.heading }}
      </h1>
    {% endif %}
    {% if section.settings.description != blank %}
      <div class="calendar-description h5">
        {{ section.settings.description }}
      </div>
    {% endif %}
    
    <div class="calendar-filters">
      <div class="calendar-filters__grid">
        <div class="calendar-filter">
          <label class="calendar-filter__label" for="filter-city">
            {% if current_lang == 'es' %}Ciudad{% else %}City{% endif %}
          </label>
          <div class="calendar-filter__select-wrapper">
            <select id="filter-city" class="calendar-filter__select">
              <option value="">{% if current_lang == 'es' %}Todas{% else %}All{% endif %}</option>
              {% for city in city_array %}
                {% if city != blank %}
                  <option value="{{ city }}">{{ city }}</option>
                {% endif %}
              {% endfor %}
            </select>
            <span class="calendar-filter__arrow">
              <svg width="10" height="6" viewBox="0 0 10 6" fill="none"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </span>
          </div>
        </div>

        <div class="calendar-filter">
          <label class="calendar-filter__label" for="filter-date">
            {% if current_lang == 'es' %}Mes{% else %}Month{% endif %}
          </label>
          <div class="calendar-filter__select-wrapper">
            <input type="month" id="filter-date" class="calendar-filter__select calendar-filter__month-input">
          </div>
        </div>

        <div class="calendar-filter">
          <label class="calendar-filter__label" for="filter-course-type">
            {% if current_lang == 'es' %}Tipo{% else %}Type{% endif %}
          </label>
          <div class="calendar-filter__select-wrapper">
            <select id="filter-course-type" class="calendar-filter__select">
              <option value="">{% if current_lang == 'es' %}Todos{% else %}All{% endif %}</option>
              {% for course_type in course_type_array %}
                {% if course_type != blank %}
                  <option value="{{ course_type }}">{{ course_type }}</option>
                {% endif %}
              {% endfor %}
            </select>
            <span class="calendar-filter__arrow">
              <svg width="10" height="6" viewBox="0 0 10 6" fill="none"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </span>
          </div>
        </div>

        <div class="calendar-filter">
          <label class="calendar-filter__label" for="filter-language">
            {% if current_lang == 'es' %}Idioma{% else %}Language{% endif %}
          </label>
          <div class="calendar-filter__select-wrapper">
            <select id="filter-language" class="calendar-filter__select">
              <option value="">{% if current_lang == 'es' %}Todos{% else %}All{% endif %}</option>
              <option value="en" {% if current_lang == 'en' %}selected{% endif %}>{% if current_lang == 'es' %}Ingl√©s{% else %}English{% endif %}</option>
              <option value="es" {% if current_lang == 'es' %}selected{% endif %}>{% if current_lang == 'es' %}Espa√±ol{% else %}Spanish{% endif %}</option>
            </select>
            <span class="calendar-filter__arrow">
              <svg width="10" height="6" viewBox="0 0 10 6" fill="none"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </span>
          </div>
        </div>

        <div class="calendar-filter calendar-filter--clear hidden" id="filter-clear-wrapper">
          <button type="button" id="filter-clear" class="calendar-filter__clear-btn">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none"><path d="M1 1L11 11M1 11L11 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
            {% if current_lang == 'es' %}Limpiar{% else %}Clear{% endif %}
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="calendar-list">
    {%- if section.blocks.size > 0 -%}
      {%- assign current_month_year = "" -%}
      {%- assign previous_date = "" -%}
      
      {%- for block in sorted_blocks -%}
        {% comment %} rendering all to DOM for JS filtering {% endcomment %}
        
        {%- assign event_date = block.settings.event_date -%}
        {%- assign event_month_year = event_date | date: "%B %Y" -%}
        {%- assign event_month_val = event_date | date: "%Y-%m" -%}
        
        {%- assign event_city = block.settings.city | strip -%}
        {%- if event_city == blank and block.settings.location != blank -%}
          {%- assign event_city = block.settings.location | split: ',' | last | strip -%}
        {%- endif -%}

        {%- if event_month_year != current_month_year -%}
          <div class="calendar-month-header" data-month="{{ event_month_val }}">
            <h2 class="month-title">
                {%- assign m = event_date | date: "%m" -%}
                {%- case m -%}
                  {%- when '01' -%}{% if current_lang == 'es' %}Enero{% else %}January{% endif %}
                  {%- when '02' -%}{% if current_lang == 'es' %}Febrero{% else %}February{% endif %}
                  {%- when '03' -%}{% if current_lang == 'es' %}Marzo{% else %}March{% endif %}
                  {%- when '04' -%}{% if current_lang == 'es' %}Abril{% else %}April{% endif %}
                  {%- when '05' -%}{% if current_lang == 'es' %}Mayo{% else %}May{% endif %}
                  {%- when '06' -%}{% if current_lang == 'es' %}Junio{% else %}June{% endif %}
                  {%- when '07' -%}{% if current_lang == 'es' %}Julio{% else %}July{% endif %}
                  {%- when '08' -%}{% if current_lang == 'es' %}Agosto{% else %}August{% endif %}
                  {%- when '09' -%}{% if current_lang == 'es' %}Septiembre{% else %}September{% endif %}
                  {%- when '10' -%}{% if current_lang == 'es' %}Octubre{% else %}October{% endif %}
                  {%- when '11' -%}{% if current_lang == 'es' %}Noviembre{% else %}November{% endif %}
                  {%- when '12' -%}{% if current_lang == 'es' %}Diciembre{% else %}December{% endif %}
                {%- endcase -%}
                {{ event_date | date: " %Y" }}
            </h2>
          </div>
          {%- assign current_month_year = event_month_year -%}
        {%- endif -%}

        <div class="calendar-event-wrapper" data-city="{{ event_city }}" data-date="{{ event_month_val }}" data-type="{{ block.settings.event_type | strip }}" data-lang="{{ block.settings.language }}">
          {%- if event_date != previous_date -%}
            <div class="calendar-list__date-header">
              <span class="date-header__day">{{ event_date | date: "%d" }}</span>
              <div class="date-header__right">
                <span class="date-header__month">
                    {%- assign m = event_date | date: "%m" -%}
                    {%- case m -%}
                      {%- when '01' -%}{% if current_lang == 'es' %}Enero{% else %}January{% endif %}
                      {%- when '02' -%}{% if current_lang == 'es' %}Febrero{% else %}February{% endif %}
                      {%- when '03' -%}{% if current_lang == 'es' %}Marzo{% else %}March{% endif %}
                      {%- when '04' -%}{% if current_lang == 'es' %}Abril{% else %}April{% endif %}
                      {%- when '05' -%}{% if current_lang == 'es' %}Mayo{% else %}May{% endif %}
                      {%- when '06' -%}{% if current_lang == 'es' %}Junio{% else %}June{% endif %}
                      {%- when '07' -%}{% if current_lang == 'es' %}Julio{% else %}July{% endif %}
                      {%- when '08' -%}{% if current_lang == 'es' %}Agosto{% else %}August{% endif %}
                      {%- when '09' -%}{% if current_lang == 'es' %}Septiembre{% else %}September{% endif %}
                      {%- when '10' -%}{% if current_lang == 'es' %}Octubre{% else %}October{% endif %}
                      {%- when '11' -%}{% if current_lang == 'es' %}Noviembre{% else %}November{% endif %}
                      {%- when '12' -%}{% if current_lang == 'es' %}Diciembre{% else %}December{% endif %}
                    {%- endcase -%}
                </span>
                <span class="date-header__year">{{ event_date | date: "%Y" }}</span>
              </div>
            </div>
          {%- endif -%}

          <div class="calendar-list__event" {{ block.shopify_attributes }}>
            <div class="event__color-bar" style="background-color: {{ block.settings.event_color }}"></div>
            <div class="event__content">
              <div class="event__meta">
                {% if block.settings.event_type != blank %}
                  <span class="event__type">{{ block.settings.event_type }}</span>
                {% endif %}
                {% if block.settings.price != blank %}
                  <span class="event__price">{{ block.settings.price }}</span>
                {% endif %}
              </div>
              <h3 class="event__title h4">{{ block.settings.title }}</h3>
              <div class="event__details">
                {% if block.settings.location != blank %}
                  <div class="event__location">
                    <span class="event__icon">üìç</span> {{ block.settings.location }}
                  </div>
                {% endif %}
              </div>
              {% if block.settings.event_description != blank %}
                <div class="event__description rte">{{ block.settings.event_description }}</div>
              {% endif %}
              {% if block.settings.registration_link != blank %}
                <div class="event__actions">
                  <a href="{{ block.settings.registration_link }}" class="btn btn--primary btn--small" target="_blank">
                    {% if current_lang == 'es' %}Registrarse{% else %}Register Now{% endif %}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
        
        {%- assign previous_date = event_date -%}
      {%- endfor -%}
    {%- else -%}
      <div class="calendar-list__empty text-center">
        <p>
          {% if current_lang == 'es' %}
            No hay eventos programados en este momento.
          {% else %}
            No events scheduled at this time.
          {% endif %}
        </p>
      </div>
    {%- endif -%}
  </div>
  <div class="calendar-list__no-results text-center hidden">
    <p>
      {% if current_lang == 'es' %}
        No se encontraron eventos con los filtros seleccionados.
      {% else %}
        No events found with the selected filters.
      {% endif %}
    </p>
  </div>
</div>

<style>
  .monthly-calendar-list {
    margin-top: 60px;
    margin-bottom: 60px;
    max-width: 900px;
  }
  .calendar-header {
    text-align: center;
    margin-bottom: 50px;
  }
  .calendar-description {
    margin-top: 10px;
    color: rgba(var(--color-foreground), 0.7);
  }

