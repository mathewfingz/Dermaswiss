      flex-direction: column;
      align-items: stretch;
    }
    .calendar-filter {
      width: 100%;
    }
    .calendar-filter__select {
      width: 100%;
    }
  }
</style>

<script>
  (function() {
    function initCalendarFilters() {
      const cityFilter = document.getElementById('filter-city');
      const monthFilter = document.getElementById('filter-date');
      const courseTypeFilter = document.getElementById('filter-course-type');
      const langFilter = document.getElementById('filter-language');
      const clearBtn = document.getElementById('filter-clear');
      const clearWrapper = document.getElementById('filter-clear-wrapper');
      const eventWrappers = document.querySelectorAll('.calendar-event-wrapper');
      const monthHeaders = document.querySelectorAll('.calendar-month-header');
      const noResults = document.querySelector('.calendar-list__no-results');

      if (!cityFilter || !monthFilter || !courseTypeFilter || !langFilter) return;

      function filterEvents() {
        const selectedCity = cityFilter.value.toLowerCase();
        const selectedMonth = monthFilter.value;
        const selectedType = courseTypeFilter.value.toLowerCase();
        const selectedLang = langFilter.value;
        let visibleCount = 0;

        if (selectedCity || selectedMonth || selectedType || selectedLang) {
          clearWrapper.classList.remove('hidden');
        } else {
          clearWrapper.classList.add('hidden');
        }

        monthHeaders.forEach(header => header.classList.remove('hidden'));

        eventWrappers.forEach(wrapper => {
          const eventCity = (wrapper.getAttribute('data-city') || '').toLowerCase();
          const eventDate = wrapper.getAttribute('data-date');
          const eventType = (wrapper.getAttribute('data-type') || '').toLowerCase();
          const eventLang = wrapper.getAttribute('data-lang');
          
          let cityMatch = !selectedCity || eventCity.includes(selectedCity);
          let monthMatch = !selectedMonth || eventDate === selectedMonth;
          let typeMatch = !selectedType || eventType === selectedType;
          let langMatch = !selectedLang || eventLang === 'all' || eventLang === selectedLang;

          if (cityMatch && monthMatch && typeMatch && langMatch) {
            wrapper.classList.remove('hidden');
            visibleCount++;
          } else {
            wrapper.classList.add('hidden');
          }
        });

        monthHeaders.forEach(header => {
          const monthVal = header.getAttribute('data-month');
          const visibleInMonth = document.querySelectorAll(`.calendar-event-wrapper[data-date="${monthVal}"]:not(.hidden)`);
          if (visibleInMonth.length === 0) {
            header.classList.add('hidden');
          }
        });

        if (visibleCount === 0) {
          noResults.classList.remove('hidden');
        } else {
          noResults.classList.add('hidden');
        }
      }

      function clearFilters() {
        cityFilter.value = "";
        monthFilter.value = "";
        courseTypeFilter.value = "";
        langFilter.value = "";
        filterEvents();
      }

      // Initial filter based on default selected values (e.g. language)
      filterEvents();

      cityFilter.addEventListener('change', filterEvents);
      monthFilter.addEventListener('change', filterEvents);
      courseTypeFilter.addEventListener('change', filterEvents);
      langFilter.addEventListener('change', filterEvents);
      clearBtn.addEventListener('click', clearFilters);
    }

    document.addEventListener('DOMContentLoaded', initCalendarFilters);
    document.addEventListener('shopify:section:load', initCalendarFilters);
  })();
</script>

