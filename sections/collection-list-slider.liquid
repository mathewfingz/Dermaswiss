{{ 'collection-list-slider.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless
  assign container = section.settings.container

  assign collection_blocks = section.blocks | where: 'type', 'collection'

  assign banner_image_ratio = section.settings.banner_image_ratio | default: 'adapt'
  if banner_image_ratio == 'adapt'
    assign first_block = collection_blocks | first
    assign first_image = first_block.settings.banner
    if first_image != blank
      assign banner_image_ratio = first_image.aspect_ratio
    else
      assign banner_image_ratio = 1
    endif
  endif

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif
  if section.settings.heading != blank
    assign motion_delay = motion_delay | plus: 50
  endif

  assign total_pages = collection_blocks.size

  assign controls_position = section.settings.controls_position
  assign controls_background = section.settings.controls_background
  assign pagination_class = 'flickity-pagination-bg--' | append: controls_background

  assign pagination_style = section.settings.pagination_type
  assign is_page_dots = false
  if pagination_style == 'dots' and total_pages > 1
    assign is_page_dots = true
  endif

  if controls_background == 'none' or controls_background == 'light'
    if controls_position == 'left' or controls_position == 'right'
      capture style
        echo '--spacing-offset: 1.4rem;'
      endcapture
    endif
  endif

  assign default_collection_name = 'onboarding.collection_title' | t

  assign badge_block = section.blocks | where: 'type', 'badges' | first
  if badge_block != blank
    assign badge_texts = badge_block.settings.text | strip | split: ''
    assign word_count = badge_block.settings.text | strip | split: ' ' | size
    assign str = ''
    for badge_text in badge_texts
      assign str = str | append: badge_text
    endfor
    if word_count > 1
      assign str = str | append: ' '
    endif
    assign str_length = str | size
    assign str_index = str_length | minus: 1
  endif
-%}
{%- style -%}
  {%- if badge_block != blank and str_length > 2 -%}
    #{{ section.id }} .collection-list-slider__badge {
      --char-length: {{ str_length }};
      --inner-angle: calc((360 / var(--char-length)) * 1deg);
      --character-size: 1.2;
      --radius: calc(var(--character-size) / (sin(var(--inner-angle))) * -1ch);

      --badge-radius: calc(var(--radius) * -2 * 1.3);
      --badge-size: var(--badge-radius);
      --badge-image-size: calc(var(--badge-size) * 0.4);
    }
  {%- endif -%}
{%- endstyle -%}
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  class="collection-list-slider f-section-padding color-{{ section.settings.color_schema }}{{ custom_class }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="{{ container }}">
    <div class="flex flex-wrap">
      <motion-element
        data-motion="{{ animation_effect }}"
        class="collection-list-slider__images w-full md:w-1/2 flex flex-col justify-center"
      >
        <flickity-component
          id="collection-list-slider__images-{{ section.id }}"
          class="flickity-enable"
          data-enable-slider="true"
          data-slider-columns="1"
          data-disable-pointer-move="false"
          data-slider-options='{"sync": "#collection-list-slider__collections-{{ section.id }}", "pageDots": false, "prevNextButtons": false, "wrapAround": true, "adaptiveHeight": true, "cellSelector": ".collection-list-slider__banner"}'
        >
          {% for block in collection_blocks %}
            <div class="collection-list-slider__banner w-full">
              <div class="flex items-center justify-center">
                {%- if block.settings.banner != blank -%}
                  {% render 'responsive-image',
                    image: block.settings.banner,
                    aspect_ratio: banner_image_ratio,
                    section_index: section.index,
                    index: forloop.index
                  %}
                {%- else -%}
                  <div
                    class="f-image"
                    style="--aspect-ratio: {{ banner_image_ratio }};"
                  >
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {% endfor %}
        </flickity-component>
      </motion-element>
      <div class="collection-list-slider__collections w-full md:w-1/2 relative flex flex-col items-center justify-center">
        {% render 'index-section-header',
          animation_effect: animation_effect,
          section_settings: section.settings,
          header_alignment: 'center',
          header_alignment_mobile: 'center'
        %}
        <motion-element
          data-motion="{{ animation_effect }}"
          data-motion-delay="{{ motion_delay }}"
          class="flex items-center justify-center w-full"
        >
          <flickity-component
            id="collection-list-slider__collections-{{ section.id }}"
            class="f-grid f-grid--gap-medium f-grid-1-cols flickity-enable flickity-show-controls flickity-controls-group flickity-controls-group__bottom flickity-controls-group__bottom--{{ controls_position }} flickity-pagination--{{ pagination_style }} {{ pagination_class }} flickity-button-initialized"
            data-slider-options='{"pageDots": {{ is_page_dots }}, "prevNextButtons": true, "wrapAround": true,  "cellSelector": ".f-column","cellAlign": "left"}'
            data-enable-slider="true"
            data-slider-columns="1"
            style="--number-slides: {{ total_pages }};{{ style }}"
          >
            {%- if badge_block -%}
              {%- liquid
                assign image_badge = badge_block.settings.image
                assign alt_image_badge = image_badge.alt | default: shop.name | escape
              -%}
              <div
                class="collection-list-slider__badge flex items-center justify-center absolute color-{{ badge_block.settings.color_scheme }}"
                {{ badge_block.shopify_attributes }}
              >
                {%- if badge_block.settings.text != blank and str_length > 2 -%}
                  <div class="split-chars absolute flex items-center justify-center w-full h-full bg-none text-upper">
                    {%- for i in (0..str_index) -%}
                      {%- assign char = str | slice: i, 1 -%}
                      <span style="--char-id: {{ i }};">
                        {{- char -}}
                      </span>
                    {%- endfor -%}
                  </div>
                {%- endif -%}
                <div
                  class="badge__icon block absolute"
                  style="--aspect-ratio: 1;"
                >
                  {%- if image_badge != blank -%}
                    {{-
                      image_badge
                      | image_url: width: 400
                      | image_tag:
                        loading: 'lazy',
                        fetchpriority: 'auto',
                        width: image_badge.width,
                        height: image_badge.height,
                        widths: '120,150,300,400',
                        alt: alt_image_badge,
                        class: 'block'
                    -}}
                  {%- else -%}
                    {{
                      'image'
                      | placeholder_svg_tag: 'placeholder-svg w-full h-full'
                    }}
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
            {%- for block in collection_blocks -%}
              {%- liquid
                assign collection = collections[block.settings.collection]

                assign collection_image = blank
                if block.settings.image != blank
                  assign collection_image = block.settings.image
                elsif collection.image != blank
                  assign collection_image = collection.image
                elsif collection.products.first and collection.products.first.images != empty
                  assign collection_image = collection.products.first.featured_image
                endif

                assign image_ratio = section.settings.image_ratio | default: 'adapt'
                if image_ratio == 'adapt'
                  if collection_image != blank
                    assign image_ratio = collection_image.aspect_ratio
                  else
                    assign image_ratio = '1/1'
                  endif
                endif

                assign collection_title = collection.title | default: default_collection_name
                if block.settings.heading != blank
                  assign collection_title = block.settings.heading
                endif

                assign loading = 'lazy'
                assign fetchpriority = 'low'
                if section.index < 2 and forloop.index == 1
                  assign loading = 'eager'
                  assign fetchpriority = 'high'
                endif
              -%}
              <div
                class="f-column w-full collection-list-slider__slide"
                data-index="{{ forloop.index0 }}"
                {{ block.shopify_attributes }}
              >
                <div class="collection-card text-center f-image-hover-effect__{{ settings.image_hover_effect }}">
                  <div class="collection-card__image-wrapper f-card overflow-hidden">
                    <a
                      {% if collection.url != blank %}
                        href="{{ collection.url }}"
                      {% else %}
                        role="link"
                      {% endif %}
                      title="{{ collection_title }}"
                      class="collection-card__wrapper block relative" 
                    >
                      {%- if collection_image != blank -%}
                        {%- liquid
                          assign image_height = collection_image.width | divided_by: collection_image.aspect_ratio
                        -%}
                        <div
                          class="f-image collection-card__image"
                          style="--aspect-ratio: {{ image_ratio }};"
                        >
                          {{
                            collection_image
                            | image_url: width: 1500
                            | image_tag:
                              loading: loading,
                              fetchpriority: fetchpriority,
                              width: collection_image.width,
                              height: image_height,
                              sizes: '50vw',
                              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                              alt: collection_title
                          }}
                        </div>
                      {%- else -%}
                        <div
                          class="collection-card__image"
                          style="--aspect-ratio: {{ image_ratio }}"
                        >
                          {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
                          {{
                            'collection-'
                            | append: current
                            | placeholder_svg_tag: 'placeholder-svg f-image'
                          }}
                        </div>
                      {%- endif -%}
                    </a>
                  </div>
                  <div class="collection-card__info">
                    <h3 class="collection-card__title m-0 font-body text-medium text-current">
                      <a
                        {% if collection.url != blank %}
                          href="{{ collection.url }}"
                        {% else %}
                          role="link"
                        {% endif %}
                        class="collection-card__name btn btn--underline"
                      >
                        {{ collection_title }}
                      </a>
                    </h3>
                  </div>
                </div>
              </div>
            {%- endfor -%}
            {%- if total_pages > 1 and pagination_style == 'counter' -%}
              <div class="flickity-page-counter no-js-hidden hidden">
                <span class="flickity-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">
                  {{- 'sections.slideshow.of' | t -}}
                </span>
                <span class="flickity-counter--total">{{ total_pages }}</span>
              </div>
            {%- endif -%}
          </flickity-component>
        </motion-element>
      </div>
    </div>
  </div>
</div>
