{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif
  if section.settings.heading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.subheading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.description != blank
    assign motion_delay = motion_delay | plus: 50
  endif
-%}
{{ 'component-image-card.css' | asset_url | stylesheet_tag }}
{{ 'uneven-image-cards.css' | asset_url | stylesheet_tag }}
<style>
  #{{ section_id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  class="uneven-image-cards f-section-padding color-{{ section.settings.color_schema }}{{ custom_class }}"
>
  <div class="container">
    {% render 'index-section-header',
      section_settings: section.settings,
      animation_effect: animation_effect
    %}
    <div class="flex flex-wrap items-{{ section.settings.vertical_alignment }} justify-{% if section.blocks.size > 1 %}between{% else %}center{% endif %} uneven-image-cards__grid">
      {%- for block in section.blocks -%}
        {%- liquid
          assign col_classes = 'block w-full uneven-image-cards__col uneven-image-cards__col-' | append: block.type

          assign image_ratio = block.settings.image_ratio
          if image_ratio == 'adapt'
            if block.settings.image != blank
              assign image_ratio = block.settings.image.aspect_ratio
            else
              assign image_ratio = '1'
            endif
          endif

          case block.type
            when 'image_with_text'
              assign col_classes = col_classes | append: ' content-spacing--' | append: block.settings.content_spacing
          endcase
        -%}
        <motion-element
          data-motion="{{ animation_effect }}"
          data-motion-delay="{{ motion_delay }}"
          class="{{ col_classes }}"
          {{ block.shopify_attributes }}
        >
          {%- case block.type -%}
            {%- when 'image_card' -%}
              <div class="relative overflow-hidden w-full f-image-hover-effect__{{ settings.image_hover_effect }} f-card">
                {% if block.settings.image != blank %}
                  {% render 'responsive-image',
                    image: block.settings.image,
                    aspect_ratio: block.settings.image_ratio,
                    wrapper_class: 'f-image-card__image',
                    section_index: section.index,
                    index: forloop.index
                  %}
                {% else %}
                  <div style="--aspect-ratio: {{ image_ratio }}">
                    {{
                      'image'
                      | placeholder_svg_tag: 'placeholder-svg f-image-card__image'
                    }}
                  </div>
                {% endif %}
                <div
                  class="f-image-card__content f-image-card__content-{{ block.settings.layout }}{% if block.settings.layout == 'layout7' or block.settings.layout == 'layout8' %} reversed-link reversed-link--underline{% endif %}"
                  style="--color-overlay-alpha: {{ block.settings.image_overlay_opacity | default: 0 }}; --vertical-content-padding: {{ block.settings.vertical_content_padding }}px; --vertical-content-padding-mobile: {{ block.settings.vertical_content_padding_mobile }}px;"
                >
                  {%- if block.settings.button_link != blank -%}
                    <a
                      href="{{ block.settings.button_link }}"
                      class="full-width-link"
                    >
                      <span class="visually-hidden">
                        {%- if block.settings.heading != blank -%}
                          {{- block.settings.heading -}}
                        {%- else -%}
                          {{- block.settings.button_label -}}
                        {%- endif -%}
                      </span>
                    </a>
                  {%- endif -%}
                  <div
                    class="f-image-card__content-box f-text-blocks"
                    style="--text-color: {{ block.settings.text_color }};"
                  >
                    <div class="f-image-card__content-text f-text-blocks">
                      {%- if block.settings.sub_heading != blank -%}
                        <p class="f-image-card__subheading text-subheading{% if block.settings.layout == 'layout8' %} flex-1{% endif %}">
                          {{ block.settings.sub_heading }}
                        </p>
                      {% endif %}
                      {%- if block.settings.heading != blank -%}
                        <h3
                          class="f-image-card__heading text-current {{ block.settings.heading_size }}"
                          {% if block.settings.heading_color != blank
                            and block.settings.heading_color != 'rgba(0,0,0,0)'
                          %}
                            style="color: {{ block.settings.heading_color }};"
                          {% endif %}
                        >
                          <span class="{% if block.settings.layout == 'layout7' or block.settings.layout == 'layout8' %} reversed-link__text{% endif %}">
                            {%- render 'highlight-text',
                              hl_text: block.settings.heading,
                              hl_style: block.settings.highlight_style,
                              enable_hl_text_color: block.settings.enable_highlight_text_color
                            -%}
                          </span>
                        </h3>
                      {%- endif -%}
                      {%- if block.settings.description != blank -%}
                        <div class="f-image-card__description rte mobile-remove-br">
                          {{ block.settings.description }}
                        </div>
                      {%- endif -%}
                    </div>
                    {%- if block.settings.button_label != blank -%}
                      <a
                        class="f-image-card__action no-color-schema btn {{ block.settings.button_style }}"
                        {% if block.settings.button_link != blank %}
                          href="{{ block.settings.button_link }}"
                        {% else %}
                          aria-disabled="true"
                        {% endif %}
                      >
                        {{ block.settings.button_label }}
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- when 'image_with_text' -%}
              <div class="f-image-hover-effect__{{ settings.image_hover_effect }} f-card">
                {%- if block.settings.image != blank -%}
                  {% render 'responsive-image',
                    image: block.settings.image,
                    aspect_ratio: block.settings.image_ratio,
                    wrapper_class: 'f-image-card__image',
                    section_index: section.index,
                    index: forloop.index
                  %}
                {%- else -%}
                  <div style="--aspect-ratio: {{ image_ratio }}">
                    {{
                      'image'
                      | placeholder_svg_tag: 'placeholder-svg f-image-card__image'
                    }}
                  </div>
                {%- endif -%}
              </div>
              <div class="f-text-blocks text-{{ block.settings.text_alignment }}">
                {%- if block.settings.sub_heading != blank -%}
                  <p class="text-subheading">
                    {{ block.settings.sub_heading }}
                  </p>
                {%- endif -%}
                {%- if block.settings.heading != blank -%}
                  <h3
                    class="{{ block.settings.heading_size }}"
                    {% if block.settings.heading_color != blank
                      and block.settings.heading_color != 'rgba(0,0,0,0)'
                    %}
                      style="color: {{ block.settings.heading_color }};"
                    {% endif %}
                  >
                    {%- render 'highlight-text',
                      hl_text: block.settings.heading,
                      hl_style: block.settings.highlight_style,
                      enable_hl_text_color: block.settings.enable_highlight_text_color
                    -%}
                  </h3>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <div class="rte">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="f-text-blocks__btn">
                    <a
                      class="btn {{ block.settings.button_style }}"
                      {% if block.settings.button_link != blank %}
                        href="{{ block.settings.button_link }}"
                      {% else %}
                        role="link"
                        aria-disabled="true"
                      {% endif %}
                    >
                      {{ block.settings.button_label }}
                    </a>
                  </div>
                {%- endif -%}
              </div>
          {%- endcase -%}
        </motion-element>
      {%- endfor -%}
    </div>
  </div>
</div>
