{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class
  assign title_font = section.settings.title_font
  assign title_font_default = 'font-heading'
  if title_font != 'heading'
    assign title_font_default = 'font-body-bolder'
  endif

  assign title_size = section.settings.title_size

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign columns = section.settings.columns
  assign enable_slider = section.settings.enable_slider
  assign show_count = section.settings.show_count
  assign image_ratio = section.settings.image_ratio
  assign card_style = section.settings.card_style
  assign text_alignment = section.settings.text_alignment
  assign text_color = section.settings.text_color
  assign enable_swipe_mobile = section.settings.enable_swipe_mobile
  assign inline_count = section.settings.inline_count
  assign button_style = section.settings.button_style
  assign button_label = section.settings.button_label
  assign button_url = section.settings.button_url
  assign show_all_button_on_top = section.settings.show_all_button_on_top

  assign columns_tablet = columns
  if columns > 3 and request.design_mode == false
    assign columns_tablet = columns | divided_by: 2.0 | ceil | at_least: 3
  endif

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif
  if section.settings.heading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.subheading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.description != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if button_label != blank and show_all_button_on_top
    assign motion_delay = motion_delay | plus: 50
  endif
-%}

{% style %}
  #{{ section_id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  }
  {% if show_all_button_on_top %}
    @media (max-width: 767px) {
      .section__header .section__button {
        margin-top: 1.2rem;
      }
    }
  {% endif %}
{% endstyle %}
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  data-section-type="collection-list"
  data-section-id="{{ section.id }}"
  class="collection-list f-section-padding color-{{ section.settings.color_schema }}{{ custom_class }}"
>
  <div class="{{ container }}">
    {% render 'index-section-header',
      section_settings: section.settings,
      button_visible: show_all_button_on_top,
      button_link: button_url,
      button_style: button_style,
      button_label: button_label,
      animation_effect: animation_effect
    %}
    <grid-list
      data-motion="{{ animation_effect }}"
      class="block"
    >
      <flickity-component
        class="f-grid f-grid-{{ section.settings.column_mobile }}-cols md:f-grid-{{ columns_tablet }}-cols lg:f-grid-{{ columns }}-cols flickity-disable f-grid--row-gap-{{ section.settings.row_gap }} f-grid--gap-{{ section.settings.column_gap }}{% if enable_slider %} md:flickity-enable{% endif %}{% if enable_swipe_mobile %} f-swiper f-swiper--no-scrollbar f-swiper--{{ section.settings.column_mobile }}-cols{% endif %}"
        data-slider-options='{"pageDots": {{ section.settings.show_dots }}, "prevNextButtons": {{ section.settings.show_nav }}, "groupCells": true, "cellSelector": ".f-column", "wrapAround": true}'
        data-slider-columns="{{ columns }}"
        data-slider-columns-tablet="{{ columns_tablet }}"
        data-calc-button-position="true"
        data-enable-slider="{{ enable_slider }}"
      >
        {%- for block in section.blocks -%}
          {%- assign title = block.settings.title -%}
          {% render 'collection-card',
            collection: block.settings.collection,
            image: block.settings.image,
            image_ratio: image_ratio,
            card_style: card_style,
            text_alignment: text_alignment,
            show_count: show_count,
            text_color: text_color,
            title: title,
            inline_count: inline_count,
            index: forloop.index,
            title_font: title_font_default,
            title_size: title_size
          %}
        {%- endfor -%}
      </flickity-component>
    </grid-list>
    {%- if button_label != blank and show_all_button_on_top == false -%}
      <motion-element
        data-motion="{{ animation_effect }}"
        data-motion-delay="{{ motion_delay }}"
        class="section__footer flex justify-center"
      >
        <a class="btn {{ button_style }}" href="{{ button_url }}">
          {{- button_label -}}
        </a>
      </motion-element>
    {%- endif -%}
  </div>
</div>
