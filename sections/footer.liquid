          {% if show_social %}
            <div class="site-footer__social-links flex md:justify-end overflow-hidden">
              {% render 'social-links', icon_size: section.settings.icon_size %}
            </div>
          {% endif %}
          {% if enable_country_selector
            or enable_language_selector
            or enable_country_selector
          %}
            <div class="site-footer__selectors flex flex-wrap items-center md:justify-start">
              {% if enable_language_selector %}
                {% render 'language-selector', position: 'up', plain: true %}
              {% endif %}
              {% if enable_country_selector %}
                {% render 'country-selector', position: 'up', plain: true %}
              {% endif %}
            </div>
          {% endif %}
        </div>
        <div class="site-footer__bottom-row flex flex-wrap justify-between">
          <div class="flex flex-col self-center site-footer__copyright-wrapper">
            {%- if section.settings.show_copyright -%}
              <p class="site-footer__copyright text-sm m-0">
                &copy; {{ 'now' | date: '%Y' }},
                <a class="link-underline " href="{{ routes.root_url }}">
                  {{- shop.name -}}</a
                >.
              </p>
            {%- endif -%}
            {%- if shop.features.follow_on_shop?
              and section.settings.enable_follow_on_shop
            -%}
              <div class="site-footer__follow-on-shop flex overflow-hidden">
                {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
                {% # theme-check-disable %}
                {{ shop | login_button: action: 'follow' }}
                {% # theme-check-enable %}
              </div>
            {%- endif -%}
          </div>
          <div class="site-footer__bottom-menu-payment flex md:justify-end items-center">
            {%- if section.settings.bottom_menu != blank -%}
              <ul class="f-linklist list-none inline-flex flex-wrap">
                {%- for link in linklists[section.settings.bottom_menu].links %}
                  <li class="flex items-center">
                    <a class="link--animated text-sm" href="{{ link.url }}">
                      {{- link.title | escape -}}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
            {%- if show_payments -%}
              <div class="site-footer__payment-icons">
                <span class="visually-hidden">
                  {{- 'sections.footer.payment' | t -}}
                </span>
                <ul class="list-none payment-icons flex flex-wrap items-center justify-start md:justify-end">
                  {%- for type in shop.enabled_payment_types -%}
                    <li class="payment-icon inline-flex">
                      {{ type | payment_type_svg_tag }}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          </div>
        </div>
      </motion-element>
    </div>
  </div>
  {%- if logo_block.settings.logo != blank -%}
    <div class="site-footer__logo color-{{ section.settings.color_schema }}">
      <div class="{{ container }}">
        <motion-element
          data-motion="{{ animation_effect }}"
          data-motion-delay="{{ motion_delay }}"
          class="block"
        >
          {% render 'responsive-image', image: logo_block.settings.logo %}
        </motion-element>
      </div>
    </div>
  {%- endif -%}
</footer>
{% javascript %}
  class FooterCollapsible extends HTMLElement {
    constructor() {
      super();

      this.details = this.querySelector('details');
      this.summary = this.querySelector('summary');
      this.summaryIsEmpty = this.summary.textContent.trim().length == 0;
      this.openDefault = this.dataset.openDefault === 'true';

      this.details.addEventListener(
        'keyup',
        (event) => event.code.toUpperCase() === 'ESCAPE' && this.close()
      );
      this.summary.addEventListener('click', this.onSummaryClick.bind(this));
      document.addEventListener('matchTablet', this.close.bind(this));
      document.addEventListener('unmatchTablet', this.open.bind(this));

      if (FoxThemeSettings.isTablet) {
        if (!this.openDefault) this.close();
      }

      document.addEventListener('matchTablet', () => {
        if (!this.openDefault) {
          this.close();
        } else {
          this.open();
        }
      });

      document.addEventListener('unmatchTablet', () => {
        this.open();
      });
    }

    onSummaryClick(event) {
      event.preventDefault();
      event.target.closest('details').hasAttribute('open')
        ? this.close()
        : this.open();
    }

    open() {
      this.details.setAttribute('open', true);
    }

    close() {
      !this.summaryIsEmpty && this.details.removeAttribute('open');
    }
  }

  customElements.define('footer-collapsible', FooterCollapsible);
{% endjavascript %}
