    </div>
  {%- endif -%}
  <div class="site-footer__top color-{{ section.settings.color_schema }}">
    <div class="{{ container }}">
      <div
        class="f-flex flex-wrap"
        style="--column-gap: 3rem; --column-gap-mobile: 0rem;"
      >
        {%- for block in section.blocks -%}
          {%- liquid
            if block.type == 'help_bar' or block.type == 'logo'
              continue
            endif

            assign heading = block.settings.heading
            if block.type == 'link_list'
              assign menu = linklists[block.settings.menu]
              assign heading = block.settings.heading | default: menu.title
            endif

            assign column_class = 'f-column flex'
            unless block.settings.custom_class == blank
              assign column_class = column_class | append: ' ' | append: block.settings.custom_class
            endunless

            assign is_collapsiblable = true
            case block.type
              when 'text'
                if block.settings.subtext == blank
                  assign is_collapsiblable = false
                endif
            endcase

            assign block_inline_css = '--column-width:' | append: block.settings.width | append: ';'

            if block.type == 'newsletter'
              assign block_inline_css = block_inline_css | append: '--block-content-width:' | append: block.settings.form_width | append: 'px;'
            endif
          -%}
          <div
            class="{{ column_class }}"
            data-column-type="{{ block.type }}"
            style="{{ block_inline_css }}"
            {{ block.shopify_attributes }}
          >
            {%- if block.type != 'empty_column' -%}
              <motion-element
                data-motion="{{ animation_effect }}"
                data-motion-delay="{{ motion_delay }}"
                class="block site-footer__block site-footer__block--{{ block.type }} w-full{% if block.settings.show_divider %} has-border relative{% endif %}"
              >
                {%- if is_collapsiblable -%}
                  <footer-collapsible data-open-default="{{ block.settings.open_default_collapsible_tab }}">
                    <details id="Details-{{ block.id }}-{{ section.id }}" open>
                      {%- if heading -%}
                        <summary>
                          <h3 class="site-footer__block-heading {{ block.settings.heading_size }} font-body-bolder">
                            {{ heading | escape }}
                          </h3>
                          <span
                            class="{% unless heading != blank %}hidden {% endunless %}lg:hidden"
                            data-collapsible-icon
                          >
                            <svg
                              width="1.5"
                              height="12"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path d="M1 1.333v9.334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            <svg
                              width="1.5"
                              height="12"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path d="M1 1.333v9.334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                          </span>
                        </summary>
                      {%- endif -%}
                      <div class="site-footer__block-content">
                        {%- case block.type -%}
                          {%- when 'link_list' -%}
                            {%- if menu.links != blank -%}
                              <ul class="list-none">
                                {%- for link in menu.links -%}
                                  <li>
                                    <a
                                      href="{{ link.url }}"
                                      class="link--animated"
                                    >
                                      {{ link.title }}
                                    </a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            {%- endif -%}
                          {%- when 'newsletter' -%}
                            {%- if block.settings.subheading != blank -%}
                              <div class="rte">
                                {{ block.settings.subheading }}
                              </div>
                            {%- endif -%}
                            {% render 'newsletter-form',
                              hide_label: block.settings.hide_label,
                              custom_id: block.id,
                              id: block.id,
                              placeholder: block.settings.email_placeholder
                            %}
                            {%- if block.settings.description != blank -%}
                              <div class="site-footer__newsletter-description">
                                {{ block.settings.description }}
                              </div>
                            {%- endif -%}
                          {%- when 'html' -%}
                            {{ block.settings.liquid }}
                          {%- when 'image' -%}
                            {%- liquid
                              assign image = block.settings.image
                              assign image_width = block.settings.image_width
                              assign alignment = block.settings.alignment
                              assign image_link = block.settings.image_link
                              assign subheading = block.settings.subheading
                              assign tag = 'div'
                              if image_link != blank
                                assign tag = 'a'
                              endif
                            -%}
                            {%- if subheading != blank -%}
                              <div class="rte">
                                {{ subheading }}
                              </div>
                            {%- endif -%}
                            {%- if image != blank -%}
                              {% capture image_attributes %}style="max-width: {{ image_width }}px;width: 100%;"{% endcapture %}
                              <{{ tag }}
                                {% if image_link != blank %}
                                  href="{{ image_link }}"
                                {% endif %}
                                class="flex justify-start lg:justify-{{ alignment }}"
                              >
                                <div
                                  class="f-image-wrap"
                                  {{ image_attributes }}
                                >
                                  {% render 'responsive-image',
                                    image: image,
                                    wrapper_class: 'w-full'
                                  %}
                                </div>
                              </{{ tag }}>
                            {%- endif -%}
                          {%- when 'text' -%}
                            <div class="rte">
                              {{ block.settings.subtext }}
                            </div>
                        {%- endcase -%}
                      </div>
                    </details>
                  </footer-collapsible>
                {%- else -%}
                  {%- if heading -%}
                    <h3 class="site-footer__block-heading {{ block.settings.heading_size }} font-body-bolder">
                      {{ heading | escape }}
                    </h3>
                  {%- endif -%}
                  {%- case block.type -%}
                    {%- when 'text' -%}
                      {%- if block.settings.subtext != blank -%}
                        <div class="site-footer__block-content">
                          <div class="rte">
                            {{ block.settings.subtext }}
                          </div>
                        </div>
                      {%- endif -%}
                  {%- endcase -%}
                {%- endif -%}
              </motion-element>
              {%- assign motion_delay = motion_delay | plus: 50 -%}
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
