{{ 'hero.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class
  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign hero_height = section.settings.hero_height
  assign hero_height_mobile = section.settings.hero_height_mobile
  assign text_color = section.settings.text_color
  assign image_overlay_opacity = section.settings.image_overlay_opacity

  assign image = section.settings.image
  assign image_mobile = section.settings.image_mobile

  if request.locale.iso_code == 'es'
    if section.settings.image_es != blank
      assign image = section.settings.image_es
    endif
    if section.settings.image_mobile_es != blank
      assign image_mobile = section.settings.image_mobile_es
    endif
  endif

  if hero_height == 'adapt' or hero_height_mobile == 'adapt'
    assign aspect_ratio = image.aspect_ratio | default: '21/9'
    assign aspect_ratio_mobile = image.aspect_ratio | default: '21/9'
  endif
  unless image_mobile == blank
    assign aspect_ratio_mobile = image_mobile.aspect_ratio
  endunless

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif

  assign loading = 'lazy'
  assign fetchpriority = 'low'
  if section.index < 2
    assign loading = 'eager'
    assign fetchpriority = 'high'
  endif

  assign content_container = 'container-fluid'
  if container != 'container' and section.settings.content_in_container == true
    assign content_container = 'container'
  endif
-%}
<div
  class="f-hero f-hero--{{ hero_height }} f-hero--mobile f-hero-mobile--{{ hero_height_mobile }}{{ custom_class }}"
  id="{{ section_id }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero-section"
>
  <div class="{{ container }}">
    <div
      {% if hero_height == 'adapt' or hero_height_mobile == 'adapt' %}
        is="media-hero"
        data-desktop-height="{{ hero_height }}"
        data-mobile-height="{{ hero_height_mobile }}"
        style="{% if hero_height == 'adapt' %}--aspect-ratio: {{ aspect_ratio }};{% endif %}{% if hero_height_mobile == 'adapt' %}--aspect-ratio-mobile: {{ aspect_ratio_mobile }};{% endif %}"
      {% endif %}
      class="block f-hero__wrapper relative overflow-hidden{% if show_text_below %} f-hero__wrapper--mobile-stack{% endif %}{% if image_mobile %} f-hero__wrapper--mobile-image{% endif %}"
    >
      <motion-element
        data-motion="{% if section.settings.enable_bg_zoom_effect %}zoom-out-sm{% else %}none{% endif %}"
        class="block f-hero__media"
      >
        {%- if image != blank -%}
          <div class="f-hero__bg f-hero__bg--desktop{% if image_mobile != blank %} hidden md:block{% endif %}{% if hero_height == 'adapt' %} h-full{% endif %}">
            {%- liquid
              assign image_height = image.width | divided_by: image.aspect_ratio
            -%}
            {{
              image
              | image_url: width: 1500
              | image_tag:
                loading: loading,
                fetchpriority: fetchpriority,
                width: image.width,
                height: image_height,
                sizes: '100vw',
                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                alt: image.alt
              | escape
            }}
          </div>
        {%- else -%}
          <div class="f-image f-hero__bg{% if image_mobile != blank %} hidden md:block{% endif %}{% if hero_height == 'adapt' %} h-full{% endif %}">
            {{
              'lifestyle-'
              | append: 1
              | placeholder_svg_tag: 'placeholder-svg'
            }}
          </div>
        {%- endif -%}
        {%- unless image_mobile == blank -%}
          <div class="f-hero__bg f-hero__bg--mobile md:hidden bg-image">
            {%- liquid
              assign image_height = image_mobile.width | divided_by: image_mobile.aspect_ratio
            -%}
            {{
              image_mobile
              | image_url: width: 1500
              | image_tag:
                loading: loading,
                fetchpriority: fetchpriority,
                width: image_mobile.width,
                height: image_height,
                sizes: '100vw',
                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                alt: image_mobile.alt
              | escape
            }}
          </div>
        {%- endunless -%}
      </motion-element>
      {%- if image_overlay_opacity > 0 -%}
        <div
          class="f-hero__overlay bg-overlay"
          style="--color-overlay-alpha: {{ image_overlay_opacity }}"
        ></div>
      {%- endif -%}
      {%- if section.blocks.size > 0 -%}
        <div class="f-hero__content-wrapper absolute inset-full flex {{ content_container }} flex md:content-overlay--{{ section.settings.content_position }}{% unless section.settings.show_text_below %} md-down:content-overlay--{{ section.settings.content_position_mobile }}{% endunless %}">
          <div
            class="f-hero__content f-text-blocks text-{{ text_alignment_mobile }} md:text-{{ text_alignment }}"
            style="--text-color: {{ text_color }};"
          >
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'title' -%}
                  {%- liquid
                    assign title = block.settings.title
                    if request.locale.iso_code == 'es' and block.settings.title_es != blank
                      assign title = block.settings.title_es
                    endif
                  -%}
                  {%- if title != blank -%}
                    {%- liquid
                      assign inline_css = ''

                      if block.settings.heading_color != blank and block.settings.heading_color != 'rgba(0,0,0,0)'
                        assign inline_css = inline_css | append: 'color:' | append: block.settings.heading_color | append: ';'
                      endif
                    -%}
                    <h2
                      class="f-hero_heading text-current {{ block.settings.heading_size }}"
                      {% if inline_css != blank %}
                        style="{{ inline_css }}"
                      {% endif %}
                      {{ block.shopify_attributes }}
                    >
                      <motion-element
                        data-motion="{{ animation_effect }}"
                        data-motion-delay="{{ motion_delay }}"
                        class="block"
                      >
                        {%- render 'highlight-text',
                          hl_text: title,
                          hl_style: block.settings.highlight_style,
                          enable_hl_text_color: block.settings.enable_highlight_text_color
                        -%}
                      </motion-element>
                    </h2>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                {%- when 'subtitle' -%}
                  {%- liquid
                    assign subtitle = block.settings.subtitle
                    if request.locale.iso_code == 'es' and block.settings.subtitle_es != blank
                      assign subtitle = block.settings.subtitle_es
                    endif
                  -%}
                  {%- if subtitle != blank -%}
                    <motion-element
                      data-motion="{{ animation_effect }}"
                      data-motion-delay="{{ motion_delay }}"
                      class="block f-hero_subheading text-subheading text-current"
                      {{ block.shopify_attributes }}
                    >
                      {{ subtitle | escape }}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                {%- when 'text' -%}
                  {%- liquid
                    assign text = block.settings.text
                    if request.locale.iso_code == 'es' and block.settings.text_es != blank
                      assign text = block.settings.text_es
                    endif
                  -%}
                  {%- if text != blank -%}
                    <motion-element
                      data-motion="{{ animation_effect }}"
                      data-motion-delay="{{ motion_delay }}"
                      class="block f-hero_text text-current rte mobile-remove-br"
                      {{ block.shopify_attributes }}
                    >
                      {{ text }}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                {%- when 'button' -%}
                  {%- liquid
                    assign button_label = block.settings.button_label
                    if request.locale.iso_code == 'es' and block.settings.button_label_es != blank
                      assign button_label = block.settings.button_label_es
                    endif
                  -%}
                  {%- if button_label != blank -%}
                    <motion-element
                      data-motion="{{ animation_effect }}"
                      data-motion-delay="{{ motion_delay }}"
                      class="block f-text-blocks__btn"
                    >
                      <a
                        class="btn {{ block.settings.button_style }} {{ block.settings.button_size }}"
                        {% if block.settings.button_link != blank %}
                          href="{{ block.settings.button_link }}"
                        {% else %}
                          role="link"
                          aria-disabled="true"
                        {% endif %}
                        {{ block.shopify_attributes }}
                      >
                        {{ button_label | escape }}
                      </a>
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
