{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign container = section.settings.container
  assign custom_class = section.settings.custom_class

  unless section.settings.show_image_padding
    assign custom_class = custom_class | append: ' image-with-text--image-out overflow-hidden'
    assign container = container | append: ' md:w-full'
  endunless

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign block_heading = section.blocks | where: 'type', 'heading' | first
  if block_heading
    assign alt = block_heading.settings.heading | escape
  endif

  case section.settings.image_width
    when '16%'
      assign image_width = 'w-full md:w-1/2 lg:w-2/12'
    when '20%'
      assign image_width = 'w-full md:w-1/2 lg:w-1/5'
    when '25%'
      assign image_width = 'w-full md:w-1/2 lg:w-1/4'
    when '33%'
      assign image_width = 'w-full md:w-1/2 lg:w-1/3'
    when '50%'
      assign image_width = 'w-full md:w-1/2 lg:w-1/2'
    when '66%'
      assign image_width = 'w-full md:w-1/2 lg:w-8/12'
    when '75%'
      assign image_width = 'w-full md:w-1/2 lg:w-9/12'
    when '83%'
      assign image_width = 'w-full md:w-1/2 lg:w-10/12'
    when '100%'
      assign image_width = 'w-full md:w-1/2 lg:w-full'
  endcase

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif
-%}
<style>
  #{{ section_id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
  }
</style>
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  class="image-with-text overflow-hidden {{ custom_class }} f-section-padding color-{{ section.settings.color_schema }}"
>
  <div class="{{ container }}">
    <div class="f-flex items-{{ section.settings.vertical_alignment }} f-grid--gap-{{ section.settings.column_gap }} f-grid--row-gap-{{ section.settings.row_gap }} flex-wrap{% if section.settings.image_position == 'right' %} flex-row-reverse image-with-text--reverse{% endif %}">
      <div class="block f-column {{ image_width }}">
        <motion-element
          data-motion="{{ animation_effect }}"
          class="image-with-text__media f-card block"
        >
          {%- if section.settings.image != blank -%}
            {% render 'responsive-image',
              image: section.settings.image,
              alt: alt,
              section_index: section.index,
              index: 1
            %}
          {%- else -%}
            <div class="f-image" style="--aspect-ratio: 1/1">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </motion-element>
      </div>
      <div class="f-column f-column__image flex-1">
        <div
          class="image-with-text__content f-text-blocks f-blocks-padding f-align-content-container--{{ section.settings.align_content_container }}"
          style="--padding-left: {{ section.settings.padding_left }}px;--padding-right: {{ section.settings.padding_right }}px;--mobile-padding-left: {{ section.settings.mobile_padding_left }}px;--mobile-padding-right: {{ section.settings.mobile_padding_right }}px;"
        >
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'heading' -%}
                <h2
                  class="image-with-text__heading {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  <motion-element
                    class="block"
                    data-motion="{{ animation_effect }}"
                    data-motion-delay="{{ motion_delay }}"
                  >
                    {%- render 'highlight-text',
                      hl_text: block.settings.heading,
                      hl_style: block.settings.highlight_style,
                      enable_hl_text_color: block.settings.enable_highlight_text_color
                    -%}
                  </motion-element>
                </h2>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {%- when 'subheading' -%}
                <motion-element
                  class="block image-with-text__subheading text-subheading mega-subtitle h6"
                  {{ block.shopify_attributes }}
                  data-motion="{{ animation_effect }}"
                  data-motion-delay="{{ motion_delay }}"
                >
                  {{ block.settings.subheading }}
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {%- when 'text' -%}
                <motion-element
                  class="block image-with-text__text mega-description text-subtext rte"
                  data-motion="{{ animation_effect }}"
                  data-motion-delay="{{ motion_delay }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </motion-element>
                {%- assign motion_delay = motion_delay | plus: 50 -%}
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <motion-element
                    class="block"
                    data-motion="{{ animation_effect }}"
                    data-motion-delay="{{ motion_delay }}"
                  >
                    <a
                      {% if block.settings.button_link != blank %}
                        href="{{ block.settings.button_link }}"
                      {% else %}
                        role="link"
                        aria-disabled="true"
                      {% endif %}
                      class="btn f-text-blocks__btn {{ block.settings.button_style }} {{ block.settings.button_size }}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  </motion-element>
                  {%- assign motion_delay = motion_delay | plus: 50 -%}
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>
