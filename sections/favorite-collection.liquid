{{ 'favorite-collection.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif
  if section.settings.heading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.subheading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.description != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.button_label != blank
    assign motion_delay = motion_delay | plus: 50
  endif

  assign collection = collections[section.settings.collection]
  assign product_to_show = section.settings.limit
  assign image_ratio = section.settings.pcard_image_ratio
  assign show_vendor = section.settings.show_vendor
  assign enable_swipe_mobile = section.settings.enable_swipe_mobile
  assign enable_sticky_column = section.settings.enable_sticky_column
-%}
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  class="f-favorite-collection{{ custom_class }} f-section-padding color-{{ section.settings.color_schema }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="{{ container }}">
    <div class="f-favorite-collection__wrapper relative">
      <favorite-collection>
        <div class="f-flex flex-wrap">
          <div class="f-column f-favorite-collection__content w-full{% if enable_sticky_column %} sticky-element{% endif %}">
            {% render 'index-section-header',
              animation_effect: animation_effect,
              section_settings: section.settings,
              button_label: section.settings.button_label,
              button_link: section.settings.button_link,
              button_style: section.settings.button_style,
              button_visible: true,
              header_alignment: 'left',
              header_alignment_mobile: 'left'
            %}
            <motion-element
              data-motion="{{ animation_effect }}"
              data-motion-delay="{{ motion_delay }}"
              class="block f-favorite-collection__image w-full"
            >
              {%- if section.settings.image != blank -%}
                {% render 'responsive-image',
                  image: section.settings.image,
                  alt: section.settings.image.alt,
                  aspect_ratio: '1/1',
                  section_index: section.index,
                  index: 1
                %}
              {%- else -%}
                <div class="f-image">
                  {{
                    'image'
                    | placeholder_svg_tag: 'placeholder-svg w-full h-full'
                  }}
                </div>
              {%- endif -%}
            </motion-element>
          </div>
          <motion-element
            data-motion="{{ animation_effect }}"
            data-motion-delay="{{ motion_delay }}"
            class="block f-column f-favorite-collection__product w-full"
          >
            <flickity-component
              class="f-grid f-grid--gap-{{ section.settings.column_gap }} f-grid--row-gap-{{ section.settings.row_gap }} f-grid-{{ section.settings.column_mobile }}-cols lg:f-grid-1-cols{% if enable_swipe_mobile %} f-swiper f-swiper--no-scrollbar f-swiper--{{ section.settings.column_mobile }}-cols{% endif %}"
              data-slider-options='{"watchCSS": true, "cellSelector": ".f-column", "wrapAround": true, "percentPosition": false, "freeScroll": false}'
            >
              {%- if collection != blank -%}
                {%- for product in collection.products
                  limit: product_to_show
                -%}
                  <div class="f-column">
                    {% render 'product-card',
                      color_schema: section.settings.color_schema,
                      product: product,
                      image_ratio: image_ratio,
                      show_vendor: show_vendor,
                      section_index: section.index,
                      index: forloop.index
                    %}
                  </div>
                {%- endfor -%}
              {%- else -%}
                {%- for i in (1..product_to_show) -%}
                  <div class="f-column">
                    {% render 'product-card-placeholder',
                      index: forloop.index
                    %}
                  </div>
                {%- endfor -%}
              {%- endif -%}
            </flickity-component>
          </motion-element>
        </div>
      </favorite-collection>
    </div>
  </div>
</div>
