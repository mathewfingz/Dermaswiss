{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class
  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign hero_height = section.settings.hero_height
  assign hero_height_mobile = section.settings.hero_height_mobile
  assign text_color = section.settings.text_color
  assign show_text_below = section.settings.show_text_below
  assign text_alignment = section.settings.text_alignment
  assign text_alignment_mobile = section.settings.text_alignment_mobile
  assign image_overlay_opacity = section.settings.image_overlay_opacity

  assign shopify_video = section.settings.shopify_video
  assign video_url_field = section.settings.video_url

  if request.locale.iso_code == 'es'
    if section.settings.shopify_video_es != blank
      assign shopify_video = section.settings.shopify_video_es
    endif
    if section.settings.video_url_es != blank
      assign video_url_field = section.settings.video_url_es
    endif
  endif

  if hero_height == 'adapt' or hero_height_mobile == 'adapt'
    assign aspect_ratio = section.settings.shopify_video.aspect_ratio | default: 2.333
    assign aspect_ratio_mobile = section.settings.shopify_video.aspect_ratio | default: 1
  endif

  assign placeholder_video = 'https://cdn.shopify.com/videos/c/o/v/fbb140fd46e3429eba459e1549dbbe38.mp4'

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif

  assign content_container = 'container-fluid'
  if section.settings.content_in_container == true and container != 'container'
    assign content_container = 'container'
  endif
-%}
{{ section.settings.video_url.preview_image }}
<div
  class="f-hero f-hero--{{ hero_height }} f-hero--mobile f-hero-mobile--{{ hero_height_mobile }}{{ custom_class }}"
  id="{{ section_id }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero-section"
  data-hero-height="{{ hero_height }}"
>
  <div class="{{ container }}">
    <div
      {% if hero_height == 'adapt' or hero_height_mobile == 'adapt' %}
        is="media-hero"
        data-desktop-height="{{ hero_height }}"
        data-mobile-height="{{ hero_height_mobile }}"
      {% endif %}
      class="block f-hero__wrapper relative overflow-hidden{% if show_text_below %} f-hero__wrapper--mobile-stack{% endif %}"
      style="{% if hero_height == 'adapt' %}--aspect-ratio: {{ aspect_ratio }};{% endif %}{% if hero_height_mobile == 'adapt' %}--aspect-ratio-mobile: {{ aspect_ratio_mobile }};{% endif %}--vertical-content-padding: {{ section.settings.vertical_content_padding }}px;--vertical-content-padding-mobile: {{ section.settings.vertical_content_padding_mobile }}px;"
    >
      {%- liquid
        assign data_type = 'mp4'
        assign video_sources = shopify_video.sources[1]
        assign video_url = video_sources.url

        if section.settings.video_type == 'shopify' and video_url == blank
          assign video_url = placeholder_video
        endif
        case section.settings.video_type
          when 'external'
            assign video_url = video_url_field
            if video_url_field.type == 'youtube'
              assign data_type = 'youtube'
            else
              assign data_type = 'vimeo'
            endif
        endcase
      -%}
      <motion-element
        data-motion="{% if section.settings.enable_bg_zoom_effect %}zoom-out-sm{% else %}none{% endif %}"
        class="block f-video-wrapper"
      >
        <video-component
          class="f-video__bg"
          data-init="false"
          data-type="{{ data_type }}"
          data-video-id="{{ section.settings.video_url.id }}"
        >
          {%- if section.settings.video_type == 'shopify'
            and video_url != blank
          -%}
            <video
              class="video-playsinline"
              src="{{ video_url }}"
              playsinline
              autoplay
              muted
              loop
            ></video>
          {%- endif -%}
        </video-component>
      </motion-element>
      {%- if image_overlay_opacity > 0 -%}
        <div
          class="f-hero__overlay bg-overlay"
          style="--color-overlay-alpha: {{ image_overlay_opacity }}"
        ></div>
      {%- endif -%}
      {%- if section.blocks.size > 0 -%}
        <div class="f-hero__content-wrapper absolute inset-full flex {{ content_container }} flex md:content-overlay--{{ section.settings.content_position }}{% unless section.settings.show_text_below %} md-down:content-overlay--{{ section.settings.content_position_mobile }}{% endunless %}">
          <div
            class="f-hero__content f-text-blocks text-{{ text_alignment_mobile }} md:text-{{ text_alignment }}"
            style="--text-color: {{ text_color }};"
          >
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'title' -%}
                  {%- liquid
                    assign title = block.settings.title
                    if request.locale.iso_code == 'es' and block.settings.title_es != blank
                      assign title = block.settings.title_es
                    endif
                  -%}
                  {%- if title != blank -%}
                    {%- liquid
                      assign inline_css = ''

                      if block.settings.heading_color != blank and block.settings.heading_color != 'rgba(0,0,0,0)'
                        assign inline_css = inline_css | append: 'color:' | append: block.settings.heading_color | append: ';'
                      endif
                    -%}
                    <h2
                      class="f-hero_heading text-current {{ block.settings.heading_size }}"
                      {% if inline_css != blank %}
                        style="{{ inline_css }}"
                      {% endif %}
                      {{ block.shopify_attributes }}
                    >
                      <motion-element
                        data-motion="{{ animation_effect }}"
                        data-motion-delay="{{ motion_delay }}"
                        class="block"
                      >
                        {%- render 'highlight-text',
                          hl_text: block.settings.title,
                          hl_style: block.settings.highlight_style,
                          enable_hl_text_color: block.settings.enable_highlight_text_color
                        -%}
                      </motion-element>
                    </h2>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                {%- when 'subtitle' -%}
                  {%- liquid
                    assign subtitle = block.settings.subtitle
                    if request.locale.iso_code == 'es' and block.settings.subtitle_es != blank
                      assign subtitle = block.settings.subtitle_es
                    endif
                  -%}
                  {%- if subtitle != blank -%}
                    <motion-element
                      data-motion="{{ animation_effect }}"
                      data-motion-delay="{{ motion_delay }}"
                      class="block f-hero_subheading text-subheading text-current"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.subtitle | escape }}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                {%- when 'text' -%}
                  {%- liquid
                    assign text = block.settings.text
                    if request.locale.iso_code == 'es' and block.settings.text_es != blank
                      assign text = block.settings.text_es
                    endif
                  -%}
                  {%- if text != blank -%}
                    <motion-element
                      data-motion="{{ animation_effect }}"
                      data-motion-delay="{{ motion_delay }}"
                      class="block f-hero_text text-current rte mobile-remove-br"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.text }}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
                {%- when 'button' -%}
                  {%- liquid
                    assign button_label = block.settings.button_label
                    assign button_second_label = block.settings.button_second_label
                    if request.locale.iso_code == 'es'
                        if block.settings.button_label_es != blank
                            assign button_label = block.settings.button_label_es
                        endif
                        if block.settings.button_second_label_es != blank
                            assign button_second_label = block.settings.button_second_label_es
                        endif
                    endif
                  -%}
                  {%- if button_label != blank
                    or button_second_label != blank
                  -%}
                    <motion-element
                      data-motion="{{ animation_effect }}"
                      data-motion-delay="{{ motion_delay }}"
                      class="f-text-blocks__btn f-hero_button"
                    >
                      {%- if block.settings.button_label != blank -%}
                        <a
                          class="btn {{ block.settings.button_style }} {{ block.settings.button_size }}"
                          {% if block.settings.button_link != blank %}
                            href="{{ block.settings.button_link }}"
                          {% else %}
                            aria-disabled="true"
                          {% endif %}
                          {{ block.shopify_attributes }}
                        >
                          {{ block.settings.button_label | escape }}
                        </a>
                      {%- endif -%}
                      {%- if block.settings.button_second_label != blank -%}
                        <a
                          class="btn {{ block.settings.button_second_style }} {{ block.settings.button_second_size }}"
                          {% if block.settings.button_second_link != blank %}
                            href="{{ block.settings.button_second_link }}"
                          {% else %}
                            aria-disabled="true"
                          {% endif %}
                          {{ block.shopify_attributes }}
                        >
                          {{ block.settings.button_second_label | escape }}
                        </a>
                      {%- endif -%}
                    </motion-element>
                    {%- assign motion_delay = motion_delay | plus: 50 -%}
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
