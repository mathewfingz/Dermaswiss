{% liquid
  assign container = section.settings.container
  assign paginate_type = section.settings.paginate_type
  assign products_per_page = section.settings.products_per_page
  assign columns = section.settings.columns

  assign enable_filtering = section.settings.enable_filtering
  assign enable_quick_buy_mode = section.settings.enable_quick_buy_mode
  assign enable_sorting = section.settings.enable_sorting
  assign enable_product_count = section.settings.enable_product_count
  assign sidebar_position = section.settings.sidebar_position

  assign show_filters = enable_filtering
  if enable_quick_buy_mode
    assign show_filters = false
  endif

  assign columns_tablet_large = columns | at_most: 4

  if sidebar_position != 'drawer' and show_filters
    assign columns_tablet_large = columns | at_most: 3
  endif

  assign columns_tablet = columns | minus: 1
  if columns < 3 or request.design_mode
    assign columns_tablet = columns
  endif

  assign animation_effect = settings.animations
  assign customer_is_b2b = false
  if customer
    if customer.b2b?
      assign customer_is_b2b = true
    elsif customer.tags contains 'b2b'
      assign customer_is_b2b = true
    endif
  endif
%}
{{ 'collection.css' | asset_url | stylesheet_tag }}
<link
  id="ModalComponent"
  rel="stylesheet"
  href="{{ 'modal-component.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>
{% if show_filters or enable_sorting %}
  <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
{% endif %}
<script
  src="{{ 'product-grid-container.js' | asset_url }}"
  defer="defer"
></script>
{% if enable_quick_buy_mode %}
  <script src="{{ 'quick-buy-list.js' | asset_url }}" defer="defer"></script>
{% endif %}

<div
  id="ProductGridContainer"
  data-section-id="{{ section.id }}"
  class="main-collection block f-section-padding"
  style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="main-collection__container">
    {%- paginate collection.products by section.settings.products_per_page -%}
      <div class="{{ container }}">
        <div class="main-collection__wrapper main-collection__wrapper--{{ sidebar_position }} flex{% unless show_filters %} main-collection__wrapper--hide-filters{% endunless %}">
          {% if show_filters %}
            {% render 'facets',
              results: collection,
              sidebar_position: sidebar_position,
              heading_size: section.settings.filter_group_heading_size,
              enable_sorting: enable_sorting,
              animation_effect: animation_effect
            %}
            <noscript>
              {% render 'facets-nojs',
                results: collection,
                form_id: 'facets-1',
                sidebar_position: sidebar_position,
                heading_size: section.settings.filter_group_heading_size,
                enable_sorting: enable_sorting,
                animation_effect: animation_effect
              %}
            </noscript>
          {% endif %}
          <div class="main-collection__list" data-product-container>
            <product-grid-container data-section-id="{{ section.id }}">
              {% render 'product-grid-header',
                results: collection,
                sidebar_position: sidebar_position,
                enable_filtering: show_filters,
                products_per_page: products_per_page,
                enable_sorting: enable_sorting,
                enable_product_count: enable_product_count
              %}
              {%- if collection.products.size == 0 -%}
                <div
                  class="product-grid product-grid--empty"
                  data-id="{{ section.id }}"
                >
                  <div class="text-center">
                    <h2 class="h4">
                      {{ 'sections.collection_template.empty' | t }}
                    </h2>
                    <p>
                      {{
                        'sections.collection_template.use_fewer_filters_html'
                        | t: link: collection.url, class: 'underlined-link'
                      }}
                    </p>
                  </div>
                </div>
                {%- liquid
                  assign current_lang = request.locale.iso_code | downcase | split: '-' | first
                  if current_lang != 'es'
                    assign current_lang = 'en'
                  endif
                  assign quick_buy_visible_count = 0
                -%}
                <div
                  class="quick-buy-list"
                  data-quick-buy-list
                  data-money-format="{{ shop.money_format | strip_html | escape }}"
                >
                    <div class="quick-buy-list__search">
                      <input 
                        type="text" 
                        id="quick-buy-search" 
                        class="quick-buy-list__search-input form-control" 
                        placeholder="üîç {% if current_lang == 'es' %}Buscar productos por nombre o SKU...{% else %}Search products by name or SKU...{% endif %}"
                        autocomplete="off"
                      >
                      <button type="button" id="quick-buy-search-clear" class="quick-buy-list__search-clear hidden" aria-label="{% if current_lang == 'es' %}Limpiar b√∫squeda{% else %}Clear search{% endif %}">‚úï</button>
                    </div>
                    <div class="quick-buy-list__row quick-buy-list__row--head">
                      <span class="quick-buy-list__head-cell">{% if current_lang == 'es' %}Producto{% else %}Product{% endif %}</span>
                      <span class="quick-buy-list__head-cell">{% if current_lang == 'es' %}Precio{% else %}Price{% endif %}</span>
                      <span class="quick-buy-list__head-cell">{% if current_lang == 'es' %}Variante{% else %}Variant{% endif %}</span>
                      <span class="quick-buy-list__head-cell">{% if current_lang == 'es' %}Cantidad{% else %}Quantity{% endif %}</span>
                      <span class="quick-buy-list__head-cell">{% if current_lang == 'es' %}A√±adir{% else %}Add{% endif %}</span>
                    </div>
                  <div class="quick-buy-list__body" id="quick-buy-list-body">
                    {%- for product in collection.products -%}
                      {% if product.tags contains 'b2b-only' and customer_is_b2b == false %}
                        {% continue %}
                      {% endif %}
                      {% assign quick_buy_visible_count = quick_buy_visible_count | plus: 1 %}
                      {% render 'card-product-quick-buy', product: product %}
                    {%- endfor -%}
                  </div>
                  <div class="quick-buy-list__no-results hidden" id="quick-buy-no-results">
                    <p>
                      {% if current_lang == 'es' %}
                        No se encontraron productos que coincidan con tu b√∫squeda.
                      {% else %}
                        No products found matching your search.
                      {% endif %}
                    </p>
                  </div>
                </div>
                {% if quick_buy_visible_count == 0 %}
                    <div class="quick-buy-list__empty">
                      <p>{{ 'sections.collection_template.empty' | t }}</p>
                      <p>
                        {% if current_lang == 'es' %}
                          Inicia sesi√≥n como cliente mayorista para ver estos productos.
                        {% else %}
                          Log in as a wholesale customer to view these products.
                        {% endif %}
                      </p>
                    </div>
                {% endif %}
              {%- else -%}
                <grid-list
                  data-motion="{{ animation_effect }}"
                  id="product-grid"
                  data-id="{{ section.id }}"
                  class="product-grid f-grid f-grid-2-cols md:f-grid-{{ columns_tablet }}-cols lg:f-grid-{{ columns_tablet_large }}-cols xl:f-grid-{{ columns }}-cols f-grid--gap-{{ section.settings.column_gap }} f-grid--row-gap-{{ section.settings.row_gap }}"
                  data-products-grid
                >
                  {%- for product in collection.products -%}
                    <div class="f-column">
                      {%- render 'product-card',
                        color_schema: 'background-1',
                        product: product,
                        section_index: 1,
                        index: forloop.index
                      -%}
                    </div>
                  {%- endfor -%}
                </grid-list>
              {% endif %}
              {% if paginate.pages > 1 %}
                <div
                  class="main-collection__pagination f-pagination__wrapper text-center"
                  data-paginate="{{ paginate_type }}"
                  data-total-pages="{{ paginate.pages }}"
                >
                  {%- if paginate_type == 'number' -%}
                    {%- render 'pagination', paginate: paginate -%}
                  {%- else -%}
                    <button
                      class="btn btn--primary btn-loadmore no-js-hidden{% if paginate_type == 'infinite' %} btn--loading{% endif %}"
                      data-load-more
                    >
                      <span class="{%- if paginate_type == 'infinite' -%}visually-hidden{% endif %}">
                        {{- 'general.pagination.load_more' | t -}}
                      </span>
                      {% comment %} theme-check-disable {% endcomment %}
                      {{ 'icon-spinner.svg' | inline_asset_content }}
                      {% comment %} theme-check-enable {% endcomment %}
                    </button>
                    <noscript>
                      {%- render 'pagination', paginate: paginate -%}
                    </noscript>
                  {%- endif -%}
                </div>
              {% endif %}
            </product-grid-container>
          </div>
        </div>
      </div>
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
