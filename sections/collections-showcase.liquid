{{ 'collections-showcase.css' | asset_url | stylesheet_tag }}
<script
  src="{{ 'collections-showcase.js' | asset_url }}"
  defer="defer"
></script>
{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container

  assign image_aspect_ratio = section.settings.image_ratio

  assign motion_delay = 0
  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif
  if section.settings.heading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.subheading != blank
    assign motion_delay = motion_delay | plus: 50
  endif
  if section.settings.description != blank
    assign motion_delay = motion_delay | plus: 50
  endif

  assign collection_titles_html = ''
  assign collection_contents_html = ''
-%}
{%- for block in section.blocks -%}
  {%- liquid
    assign collection = collections[block.settings.collection]

    assign collection_image = blank
    if block.settings.image != blank
      assign collection_image = block.settings.image
    elsif collection.image != blank
      assign collection_image = collection.image
    elsif collection.products.first and collection.products.first.images != empty
      assign collection_image = collection.products.first.featured_image
    endif

    if forloop.first and section.settings.image_ratio == 'adapt'
      if collection_image != blank
        assign image_aspect_ratio = collection_image.aspect_ratio
      else
        assign image_aspect_ratio = '1/1'
      endif
    endif

    assign collection_title = block.settings.heading
    if collection_title == blank
      if collection != blank
        assign collection_title = collection.title
      else
        assign collection_title = 'onboarding.collection_title' | t
      endif
    endif

    assign collection_description = block.settings.text
    if collection_description == blank
      if collection != blank
        assign collection_description = collection.description
      else
        assign collection_description = 'onboarding.collection_description' | t
      endif
    endif
  -%}
  {%- capture title_html -%}
    <li 
      class="{{ block.settings.heading_size }} m-0 collections-showcase__title cursor-pointer{% if forloop.first %} is-active{% endif %}" 
      data-block-id="{{ block.id }}" 
      data-index={{ forloop.index0 }}
      {% if collection != blank %}
        data-url="{{ collection.url }}"
      {% endif %}
    	{{ block.shopify_attributes }}>
      {%- liquid
        assign ordinal_number = forloop.index | append: '.'
        if forloop.index < 10
          assign ordinal_number = ordinal_number | prepend: '0'
        endif
      -%}
      <motion-element
        data-motion="{{ animation_effect }}"
        data-motion-delay="{{ motion_delay }}"
        class="inline-flex items-center collections-showcase__title-inner"
      >
        <span class="collections-showcase__title-count shrink-0 font-body text-medium">{{ ordinal_number }}</span>
        <h3 class="collections-showcase__title-name m-0 {{ block.settings.heading_size }}">
          <span class="">{{ collection_title }}</span>
        </h3>
      </motion-element>
      {%- assign motion_delay = motion_delay | plus: 50 -%}
    </li>
  {%- endcapture -%}
  {%- assign collection_titles_html = collection_titles_html
    | append: title_html
  -%}

  {%- capture content_html -%}
    <div class="collections-showcase__content f-grid f-grid-2-cols items-center{% if forloop.first %} is-active{% endif %}"{% unless forloop.first %} hidden{% endunless %}>
      {%- liquid
        assign image_wrap_tag = 'div'
        if collection.url != blank
          assign image_wrap_tag  = 'a'
        endif
      -%}
      <{{image_wrap_tag}}
        class="collections-showcase__image f-card block f-image-hover-effect__{{ settings.image_hover_effect }}{% if forloop.first %} is-active{% endif %}"
        style="--aspect-ratio: {{ image_aspect_ratio }}"
        {% if collection.url != blank %}
          href="{{ collection.url }}"
        {% endif %}
      >
        {%- if collection_image != blank -%}
          {% render 'responsive-image', image: collection_image, aspect_ratio: image_aspect_ratio, section_index: section.index, index: forloop.index %}
        {%- else -%}
          <div class="f-image" style="--aspect-ratio: {{ image_aspect_ratio }}">
            {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
            {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </{{ image_wrap_tag }}>
      <div class="collections-showcase__info f-text-blocks md:f-text-blocks--small">
        {%- if block.settings.subheading != blank -%}
          <h4 class="collections-showcase__subheading {{ block.settings.subheading_size }}">
            {{ block.settings.subheading }}
          </h4>
        {%- endif -%}
        {%- if collection_description != blank -%}
          <div class="collections-showcase__description rte">
            {{ collection_description }}
          </div>
        {%- endif -%}
        {% if block.settings.button_label != blank %}
          <div class="f-text-blocks__btn block">
            <a class="btn {{ block.settings.button_style }}"
              {% if collection.url != blank %}
                href="{{ collection.url }}"
              {% else %}
                aria-disabled="true"
                disabled
              {% endif %}
            >
              {{- block.settings.button_label -}}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  {%- endcapture -%}
  {%- assign collection_contents_html = collection_contents_html
    | append: content_html
  -%}
{%- endfor -%}
{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  class="collections-showcase f-section-padding color-{{ section.settings.color_schema }}{{ custom_class }}"
>
  <div class="{{ container }}">
    <collections-showcase
      class="collections-showcase__grid f-grid f-grid-3-cols items-center"
      data-section-id="{{ section.id }}"
    >
      <nav class="collections-showcase__nav w-full">
        {% render 'index-section-header',
          animation_effect: animation_effect,
          section_settings: section.settings,
          header_alignment: 'left',
          header_alignment_mobile: 'left'
        %}
        <ul class="collections-showcase__nav-list list-none flex flex-col">
          {{ collection_titles_html }}
        </ul>
      </nav>
      <motion-element 
        data-motion="{{ animation_effect }}"
        class="block collections-showcase__contents">
        {{ collection_contents_html }}
      </motion-element>
    </collections-showcase>
  </div>
</div>
