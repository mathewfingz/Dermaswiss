{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign custom_class = section.settings.custom_class

  unless custom_class == blank
    assign custom_class = custom_class | prepend: ' '
  endunless

  assign container = section.settings.container
  assign design = section.settings.design
  assign enable_slider = false
  assign cell_align = 'left'
  assign group_cells = 1
  assign columns = 3
  assign show_quotes_icon = section.settings.show_quotes_icon
  assign stars_color = section.settings.stars_color

  assign autoplay = false
  if section.settings.autoplay
    assign autoplay_timeout = section.settings.autoplay_timeout | default: 5
    assign autoplay = autoplay_timeout | times: 1000
  endif
  
  if section.blocks.size > columns
    assign enable_slider = section.settings.enable_slider
    assign show_nav = section.settings.show_nav
    assign show_dots = section.settings.show_dots
  endif

  if design == 'standard'
    assign columns = section.settings.columns
    assign group_cells = columns
  endif
  if design == 'fancy'
    assign cell_align = 'center'
  endif
  if design == 'focused'
    assign columns = 4
  endif

  # Card.
  if design == 'unbalanced'
    assign show_dots = false
    assign show_page = section.settings.show_dots
    assign flickity_classes = 'flickity-controls-group flickity-controls-group__top flickity-static flickity-pagination-bg--none' | prepend: ' '
    unless show_nav
      assign flickity_classes = flickity_classes | append: ' flickity-no-nav'
    endunless
    unless show_page
      assign flickity_classes = flickity_classes | append: ' flickity-no-page'
    endunless
    if settings.section_header_alignment == 'left' or settings.section_header_alignment == 'center'
      assign flickity_classes = flickity_classes | append: ' flickity-controls-group__top--right'
    else
      assign flickity_classes = flickity_classes | append: ' flickity-controls-group__top--left'
    endif
  endif

  if design == 'zigzag'
    assign columns = 4
    assign group_cells = 1
    assign cell_align = 'center'
  endif

  capture styles
    if section.blocks.size > 9
      echo '--pagination-width: 4rem;'
    else
      echo '--pagination-width: 2.5rem;'
    endif
  endcapture

  assign animation_effect = settings.animations
  if animation_effect != 'none' and section.settings.animations != 'inherit'
    assign animation_effect = section.settings.animations
  endif

  assign header_alignment = blank
  assign header_alignment_mobile = blank
  if enable_slider
    if show_page or show_nav
      assign header_alignment = 'left'

      if settings.section_header_alignment_mobile == 'inherit'
        # Revert mobile alignment.
        assign header_alignment_mobile = settings.section_header_alignment
      endif
    endif
  endif
-%}
{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
<div
  id="{{ section_id }}"
  class="f-testimonials f-testimonials--{{ design }}{{ custom_class }} f-section__{{ container }} f-section-padding color-{{ section.settings.color_schema }} overflow-hidden"
  data-section-type="testimonials"
  data-section-id="{{ section.id }}"
  data-enable-slider="{{ enable_slider }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px; "
>
  <div class="{{ container }}">
    {% if design == 'unbalanced' %}<div class="relative">{% endif %}
    {% render 'index-section-header',
      animation_effect: animation_effect,
      section_settings: section.settings,
      header_alignment: header_alignment,
      header_alignment_mobile: header_alignment_mobile
    %}
    <grid-list
      data-motion="{{ animation_effect }}"
      class="block f-testimonials__wrapper"
    >
      <flickity-component
        class="f-grid sm:f-grid-2-cols md:f-grid-3-cols lg:f-grid-{{ columns }}-cols f-grid--gap-{{ section.settings.column_gap }} flickity-disable {% if enable_slider %}md:flickity-enable {% endif %}flickity-button-initialized f-swiper f-swiper--no-scrollbar{{ flickity_classes }}"
        data-slider-options='{"autoPlay": {{ autoplay }}, "pageDots": {{ show_dots }}, "prevNextButtons": {{ show_nav }}, "groupCells": {{ group_cells }}, "cellAlign": "{{ cell_align }}", "cellSelector": ".f-column", "wrapAround": true, "percentPosition": true, "contain": true}'
        data-slider-columns="{{ columns }}"
        data-enable-slider="{{ enable_slider }}"
        {% if show_page and section.blocks.size > 1 %}
          style="{{ styles }}"
        {% endif %}
      >
        {%- for block in section.blocks -%}
          {%- liquid
            assign text = block.settings.text
            assign author = block.settings.author
            assign bio = block.settings.bio
            assign image = block.settings.image
            assign show_image = block.settings.show_image
          -%}
          <div
            class="f-column"
            {{ block.shopify_attributes }}
            {% if block.settings.icon != 'none' %}
              style="--color-star: {{ stars_color }}"
            {% endif %}
          >
            <div class="grid-list__column f-testimonial f-testimonial--{{ design }}{% if design == 'unbalanced' %} color-{{ section.settings.card_color_schema }}{% endif %}">
              {% case design %}
                {% when 'unbalanced' %}
                  <div class="f-testimonial__inner flex flex-col">
                    <div class="f-testimonial__content flex flex-1">
                      <div class="flex-1">
                        {%- if block.settings.icon != 'none'
                          and block.settings.icon == 'quote'
                        -%}
                          <div class="f-testimonial__icon f-testimonial__icon--{{ block.settings.icon }}">
                            {% render 'icon-testimonials',
                              icon_name: block.settings.icon
                            %}
                          </div>
                        {%- endif -%}
                        {%- if author != blank -%}
                          <p class="f-testimonial__author">{{ author }}</p>
                        {%- endif -%}
                        {%- if block.settings.icon != 'none'
                          and block.settings.icon != 'quote'
                        -%}
                          <div class="f-testimonial__icon f-testimonial__icon--{{ block.settings.icon }}">
                            {% render 'icon-testimonials',
                              icon_name: block.settings.icon
                            %}
                          </div>
                        {%- endif -%}
                        {%- if bio != blank -%}
                          <p class="f-testimonial__bio font-medium">
                            {{ bio }}
                          </p>
                        {%- endif -%}
                        {%- if text != blank -%}
                          <div class="f-testimonial__text">{{ text }}</div>
                        {%- endif -%}
                      </div>
                      {%- if show_image -%}
                        <div class="f-testimonial__image">
                          {% if image != blank %}
                            {% render 'responsive-image', image: image %}
                          {% else %}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                          {% endif %}
                        </div>
                      {%- endif -%}
                    </div>
                    {%- if block.settings.product != blank -%}
                      <div class="f-testimonial__footer">
                        {%- assign product = all_products[block.settings.product] -%}
                        <a
                          class="f-testimonial__product flex items-center"
                          href="{{ product.url }}"
                          target="_blank"
                          style="--image-width: 40px;"
                        >
                          {% render 'responsive-image',
                            image: product.featured_image
                          %}
                          <p class="f-testimonial__product-title m-0 h6">
                            {{ product.title }}
                          </p>
                        </a>
                      </div>
                    {%- endif -%}
                  </div>
                {%- when 'zigzag' -%}
                  <div class="f-testimonial__inner">
                    {%- if image != blank -%}
                      <div class="f-testimonial__image">
                        {% render 'responsive-image',
                          image: image,
                          wrapper_class: 'w-full'
                        %}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.icon != 'none' -%}
                      <div class="f-testimonial__icon f-testimonial__icon--{{ block.settings.icon }}">
                        {% render 'icon-testimonials',
                          icon_name: block.settings.icon
                        %}
                      </div>
                    {%- endif -%}
                    {%- if text != blank -%}
                      <div class="f-testimonial__text">{{ text }}</div>
                    {%- endif -%}
                    <div class="f-testimonial__inner-bottom">
                      {%- if author != blank -%}
                        <p class="f-testimonial__author">{{ author }}</p>
                      {%- endif -%}
                      {%- if bio != blank -%}
                        <p class="f-testimonial__bio">{{ bio }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                {%- else -%}
                  <div class="f-testimonial__inner flex flex-col{% if show_quotes_icon %} show-quotes-icon{% endif %}">
                    {%- if block.settings.icon != 'none' -%}
                      <div class="f-testimonial__icon f-testimonial__icon--{{ block.settings.icon }}">
                        {% render 'icon-testimonials',
                          icon_name: block.settings.icon
                        %}
                      </div>
                    {%- endif -%}
                    {%- if text != blank -%}
                      <div class="f-testimonial__text">{{ text }}</div>
                    {%- endif -%}
                    <div class="f-testimonial__inner-bottom{% if image != blank %} f-testimonial__inner-bottom-has-image{% endif %}">
                      {%- if image != blank -%}
                        <div class="f-testimonial__inner-bottom-left">
                          {% render 'responsive-image', image: image %}
                        </div>
                      {%- endif -%}
                      <div class="f-testimonial__inner-bottom-right">
                        {%- if author != blank -%}
                          <p class="f-testimonial__author">{{ author }}</p>
                        {%- endif -%}
                        {%- if bio != blank -%}
                          <p class="f-testimonial__bio font-medium">
                            {{ bio }}
                          </p>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
              {%- endcase -%}
            </div>
          </div>
        {%- endfor -%}
        {%- if enable_slider and show_page -%}
          <div class="flickity-page-counter no-js-hidden hidden md:hidden">
            <span class="flickity-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">
              {{- 'sections.slideshow.of' | t -}}
            </span>
            <span class="flickity-counter--total">
              {{- section.blocks.size -}}
            </span>
          </div>
        {%- endif -%}
      </flickity-component>
    </grid-list>
    {%- if design == 'unbalanced' -%}</div>{%- endif -%}
  </div>
</div>
