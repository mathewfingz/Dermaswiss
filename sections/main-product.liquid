{% comment %}theme-check-disable TemplateLength{% endcomment %}
{{ 'product.css' | asset_url | stylesheet_tag }}
<style>
  /* Espaciado configurable entre bloques del producto */
  #ProductInfo-{{ section.id }} .f-product-single__block {
    --product-blocks-gap: {{ section.settings.blocks_gap_desktop | default: 24 }}px;
    --product-blocks-gap-large: calc({{ section.settings.blocks_gap_desktop | default: 24 }}px + 12px);
  }
  @media (max-width: 767.98px) {
    #ProductInfo-{{ section.id }} .f-product-single__block {
      --product-blocks-gap: {{ section.settings.blocks_gap_mobile | default: 20 }}px;
      --product-blocks-gap-large: calc({{ section.settings.blocks_gap_mobile | default: 20 }}px + 12px);
    }
  }
</style>
{%- liquid
  assign enable_image_zoom = section.settings.enable_image_zoom | default: false

  assign first_3d_model = product.media | where: 'media_type', 'model' | first

  assign enable_variant_group_image = false
  if product.metafields['foxecom-bs-kit']['variant-images'].value.enable and product.has_only_default_variant == false
    assign enable_variant_group_image = true
  endif

  assign variant_picker_block = section.blocks | where: 'type', 'variant_picker' | first
  assign disable_default_variant = variant_picker_block.settings.variant_picker_dont_select_the_default_variant
  if product.has_only_default_variant
    assign disable_default_variant = false
  endif
-%}
{%- if first_3d_model -%}
  <link
    id="ModelViewerStyle"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}
<link
  id="ModalComponent"
  rel="stylesheet"
  href="{{ 'modal-component.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>
{%- if product.quantity_price_breaks_configured? -%}
  {{ 'volume-pricing.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'volume-pricing.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{%- if enable_image_zoom -%}
  <link
    rel="stylesheet"
    href="{{ 'photoswipe-component.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}
{%- liquid
  assign container = section.settings.container
  assign media_size = section.settings.media_size
  assign enable_sticky_info = section.settings.enable_sticky_info

  assign animation_effect = settings.animations
-%}
{%- if section.settings.show_breadcrumb -%}
  {%- render 'breadcrumb',
    container: section.settings.container,
    justify: 'center'
  -%}
{%- endif -%}
<product-info
  id="MainProduct-{{ section.id }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-product-url="{{ product.url }}"
  class="f-product-single block"
  data-section-type="main-product"
  data-media-layout="{{ section.settings.media_layout }}"
  data-enable-variant-group-images="{{ enable_variant_group_image }}"
  data-disable-default-select-variant="{{ disable_default_variant }}"
  data-variant-option-none-text="{{ 'products.product.variant_option_none_text' | t }}"
  data-variant-selection-needed-text="{{ 'products.product.variant_selection_needed_text' | t }}"
>
  <div class="{{ container }}">
    <div
      class="f-flex flex-wrap f-single-product--information f-single-product--media-{{ media_size }}{% unless product.media.size > 0 %} f-single-product--no-media{% endunless %}"
      style="--column-gap: 6rem;--row-gap-mobile: 2.4rem;"
    >
      <motion-element
        data-motion="{{ animation_effect }}"
        class="block f-column f-product__media-wrapper"
      >
        {% render 'product-media',
          section: section,
          first_3d_model: first_3d_model,
          enable_image_zoom: enable_image_zoom,
          enable_sticky_info: enable_sticky_info,
          show_featured_media: section.settings.show_featured_media
        %}
      </motion-element>
      <motion-element
        data-motion="{{ animation_effect }}"
        class="block f-column f-product-single__info"
      >
        {% render 'main-product-blocks',
          update_browser_history: true,
          enable_sticky_info: enable_sticky_info,
          disable_default_variant: disable_default_variant
        %}
      </motion-element>
    </div>
  </div>
  {%- if enable_variant_group_image -%}
    <script id="VariantGroupImages" type="application/json">
      {{ product.metafields.foxecom-bs-kit.variant-images.value | json }}
    </script>
  {%- endif -%}
  <script id="ProductData" type="application/json">
    {%- if customer -%}
    {{ product | json }}
    {%- else -%}
      {}
    {%- endif -%}
  </script>
</product-info>
<product-recently-viewed
  data-product-id="{{ product.id }}"
  class="f:hidden"
></product-recently-viewed>
<script src="{{ 'product-info.js' | asset_url }}" defer></script>
{%- if product.media.size > 0 -%}
  <script src="{{ 'product-media.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{%- if first_3d_model -%}
  <script type="application/json" id="ModelJSON-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script src="{{ 'product-model.js' | asset_url }}" defer></script>
{%- endif -%}
{%- if product.options_with_values.size > 0 -%}
  <script src="{{ 'variants-picker.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{%- if section.settings.enable_image_zoom -%}
  {%- liquid
    assign media_list = product.media | where: 'media_type', 'image'
    assign wrap_around = false
    assign cell_align = 'left'
    if media_list.size > 2
      assign wrap_around = true
    endif
    if media_list.size == 1
      assign cell_align = 'center'
    endif
  -%}
  <product-modal
    id="ProductModal-{{ section.id }}"
    class="f-modal hidden media-modal"
    style="--modal-width: 100%"
  >
    <div
      class="f-modal__content"
      role="dialog"
      aria-label="{{ 'products.modal.label' | t }}"
      aria-modal="true"
      tabindex="-1"
    >
      <div class="f-modal__inner">
        <button
          id="ModalClose-{{ section.id }}"
          type="button"
          class="f-modal__close"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          {% comment %} theme-check-disable {% endcomment %}
          {{ 'icon-close.svg' | inline_asset_content }}
          {% comment %} theme-check-enable {% endcomment %}
        </button>
        <div class="f-modal__inner">
          <div
            class="media-modal__content flex flex-col h-full"
            role="document"
            aria-label="{{ 'products.modal.label' | t }}"
            tabindex="0"
            data-media-loading
          >
            <flickity-component
              data-slider-options='{"pageDots": false, "cellAlign": "{{ cell_align }}", "prevNextButtons": true, "adaptiveHeight": true, "setGallerySize": false, "dragThreshold": 10, "wrapAround": {{ wrap_around }}}'
              data-enable-slider="true"
              data-slider-columns="1"
              id="Modal-Media-Gallery-{{ section.id }}"
              class="media-modal__list h-full{% if media_list.size == 1 %} media-modal__list--has-only{% endif %}"
              role="list"
            >
              {%- liquid
                if product.selected_or_first_available_variant.featured_media != null
                  assign media = product.selected_or_first_available_variant.featured_media
                  render 'media', media: media, media_index: 0
                endif
              -%}

              {%- for media in media_list -%}
                {%- liquid
                  unless media.id == product.selected_or_first_available_variant.featured_media.id
                    render 'media', media: media, media_index: forloop.index0
                  endunless
                -%}
              {%- endfor -%}
            </flickity-component>
          </div>
        </div>
      </div>
    </div>
  </product-modal>
{%- endif -%}
{%- if customer -%}
<script type="application/ld+json">
  {{ product | structured_data }}
</script>
{%- endif -%}
